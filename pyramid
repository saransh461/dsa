#include <iostream>
using namespace std;

int main(){
    int n=4;
    for(int i=0;i<n;i++){
        for(int j=0;j<n-i-1;j++){
            cout<<" ";
        }
        for(int j=0;j<i+1;j++){
            cout<<j+1;
        }
        for(int j=0;j<i;j++){
            cout<<i-j;
        }
        cout<<"\n";
    }
    return 0;
}


output:
   1
  121
 12321
1234321
